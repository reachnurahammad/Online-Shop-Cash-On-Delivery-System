            <a href="@Url.Action("smarttv","Home")" class="list-group-item text-dark btn btn-light bg-light text-left">smart-tv</a>


            <a href="@Url.Action("Aarong","Admin")" class="list-group-item text-dark btn btn-light bg-light text-left">Aarong</a>
            <a asp-action="AarongUpload" class="list-group-item text-dark btn btn-light bg-light text-left">Aarong<i class="fas fa-plus-square ml-5"></i></a>


            <a href="@Url.Action("BdFood","Admin")" class="list-group-item text-dark btn btn-light bg-light text-left">BdFood</a>
            <a asp-action="BdFoodUpload" class="list-group-item text-dark btn btn-light bg-light text-left">BdFoodUpload<i class="fas fa-plus-square ml-5"></i></a>


            <a href="@Url.Action("Lux","Admin")" class="list-group-item text-dark btn btn-light bg-light text-left">Lux</a>
            <a asp-action="LuxUpload" class="list-group-item text-dark btn btn-light bg-light text-left">LuxUpload<i class="fas fa-plus-square ml-5"></i></a>

            <a href="@Url.Action("Shopno","Admin")" class="list-group-item text-dark btn btn-light bg-light text-left">Shopno</a>
            <a asp-action="ShopnoUpload" class="list-group-item text-dark btn btn-light bg-light text-left">ShopnoUpload<i class="fas fa-plus-square ml-5"></i></a>


