@*/.....PaginatedList...../*@
<div class="" style="margin-top: 5%;margin-left: 40%;">
    <div class="col">

        <ul class="pagination">
            <li class="">
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewBag.sortparam"
                   asp-route-usertext="@ViewBag.sword"
                   asp-route-page="1" class="btn btn-info">First</a>
            </li>
            <li class="page-item @prev">
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewBag.sortparam"
                   asp-route-usertext="@ViewBag.sword"
                   asp-route-page="@(cp-1)" class="btn btn-dark @prev">Prev</a>
            </li>
            @for (int k = 1; k < Model.TotalPages; k++)
            {
                if (k >= cp - 5 && k <= cp + 5)
                {
                    if (k == cp)
                    {
                        <li class="page-item @(k==cp?"active":"")">
                            <a asp-action="Index"
                               asp-route-sortOrder="@ViewBag.sortparam"
                               asp-route-usertext="@ViewBag.sword"
                               asp-route-page="@k" class="btn btn-warning">@k</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item @(k==cp?"active":"")">
                            <a asp-action="Index"
                               asp-route-sortOrder="@ViewBag.sortparam"
                               asp-route-usertext="@ViewBag.sword"
                               asp-route-page="@k" class="btn btn-secondary">@k</a>
                        </li>
                    }
                }
            }
            <li class="page-item @next">
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewBag.sortparam"
                   asp-route-usertext="@ViewBag.sword"
                   asp-route-page="@(cp+1)" class="btn btn-dark @next">Next</a>
            </li>
            <li>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewBag.sortparam"
                   asp-route-usertext="@ViewBag.sword"
                   asp-route-page="@Model.TotalPages" class="btn btn-info">Last</a>
            </li>
        </ul>
    </div>
</div>





