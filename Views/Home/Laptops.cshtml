@model IEnumerable<Test.Models.Laptop>

@{
    ViewData["Title"] = "Laptops";
}

@*img slide*@
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="width: 1500px; margin-left: .5%;">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class=" d-block w-100" src="~/img/laptop-banner1.jpg" alt="First slide">
        </div>
        <div class="carousel-item">

            <img class=" d-block w-100" src="~/img/laptop-banner2.jpg" alt="First slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<style>
    .carousel-item img {
        margin-top: .9%;
        height: 290px;
    }
</style>


<div class="row">
    @foreach (var item in ViewBag.LaptopData)
    {
    <div class="col-md-2" style="margin-top:10px; margin-bottom:95px; margin-left:2%;">
        <div style="height: 180px; width: 150px; background-color:#ffffff ; margin-top: 30px; ">
            <a asp-action="LaptopDetails" asp-route-id="@item.Id">
                <img src="@item.ImageFile" alt="Product Image" style="height: 180px; width: 270px; border: 1px solid #64696d; border-bottom:none;" />
            </a>
            <div style="background-color: white; width:270px; border: 1px solid #64696d; border-top:none;">
                <div class="offset-1 ">
                    <h6> @item.Details</h6>
                    <p1>Price: @item.Price</p1>
                    @*item.Quantity*@
                    <form asp-action="LaptopAddToCart" class="form-inline" method="post">
                        <input type="hidden" name="pid" value="@item.Id" />
                        <input type="number" name="qty" value="1" class="form-control" style="width:60px;" />
                        <button class="btn btn-primary btn-sm ml-1" type="submit">Add To Cart</button>
                    </form><br/>
                </div>
            </div>

        </div>
    </div>
    }
</div>